<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/text_backupNo"
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <TextView
            android:id="@+id/text_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="App Activity State:" />

        <Button
            android:id="@+id/btn_activity_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_activity"
            android:layout_centerHorizontal="true"
            android:text="State OFF"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/text_thisNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_activity_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="This Phone Number" />

        <EditText
            android:id="@+id/edit_ThisNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_thisNo"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Enter Number Here"
            android:inputType="phone"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_backupNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_thisNo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Backup Phone No" />

        <EditText
            android:id="@+id/edit_backupNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_backupNo"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Enter Number Here"
            android:inputType="phone"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_thisNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_ThisNo"
            android:layout_centerHorizontal="true"
            android:text="Save"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_backupNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_backupNo"
            android:layout_centerHorizontal="true"
            android:text="Save"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/text_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_backupNo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Enter Password code (Default is: 1234)" />

        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pass"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Enter Password here"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_pass"
            android:layout_centerHorizontal="true"
            android:text="Save"
            android:textAllCaps="false" />
    </RelativeLayout>
</ScrollView>